datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Chat {
  id Int @id @default(autoincrement())
  name String
  author_id String
  messages Message[]
}

model Message {
  id Int @id @default(autoincrement())
  body String
  author_id String
  chat_id Int
  chat Chat @relation(fields: [chat_id], references: [id])
}